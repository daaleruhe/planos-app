<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daale.ppi.registro"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <TextView
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombres:"
        android:textSize="20sp"
        android:layout_marginTop="53dp"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6" />

    <TextView
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellidos:"
        android:textSize="20sp"
        android:layout_marginTop="26dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Documento:"
        android:textSize="20sp"
        android:layout_marginTop="85dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celular:"
        android:textSize="20sp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:id="@+id/textView9" />

    <TextView
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo:"
        android:textSize="20sp"
        android:id="@+id/textView10"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario:"
        android:textSize="20sp"
        android:layout_marginTop="21dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de nacimiento:"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/textView13"
        android:layout_above="@+id/eDocumento"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_toLeftOf="@+id/eApellidos"
        android:layout_toStartOf="@+id/eApellidos" />

    <TextView
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña:"
        android:textSize="20sp"
        android:layout_marginTop="29dp"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:background="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Selecciona la fecha."
        android:textAlignment="center"
        android:id="@+id/tvFecha_x"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignRight="@+id/eDocumento"
        android:layout_alignEnd="@+id/eDocumento"
        android:layout_toRightOf="@+id/textView13"
        android:layout_toEndOf="@+id/textView13" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@color/colorText"
        android:inputType="textPassword"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/eContraseña" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@color/colorText"
        android:id="@+id/eNombre"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/eContraseña"
        android:layout_alignStart="@+id/eContraseña" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@color/colorText"
        android:inputType="number"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignLeft="@+id/eCorreo"
        android:layout_alignStart="@+id/eCorreo"
        android:id="@+id/eCelular" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@color/colorText"
        android:inputType="textEmailAddress"
        android:id="@+id/eCorreo"
        android:layout_above="@+id/textView11"
        android:layout_alignLeft="@+id/eContraseña"
        android:layout_alignStart="@+id/eContraseña" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@color/colorText"
        android:layout_above="@+id/textView8"
        android:layout_alignLeft="@+id/eNombre"
        android:layout_alignStart="@+id/eNombre"
        android:id="@+id/eApellidos" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@color/colorText"
        android:inputType="number"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/eCelular"
        android:layout_alignStart="@+id/eCelular"
        android:id="@+id/eDocumento" />

    <EditText
        android:id="@+id/eUsuario"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@color/colorText"
        android:layout_above="@+id/textView12"
        android:layout_alignLeft="@+id/eCorreo"
        android:layout_alignStart="@+id/eCorreo" />

    <Button
        android:id="@+id/btnCrear_cuenta"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Crear Cuenta"
        android:layout_marginTop="48dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/textView12"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:background="@color/colorText"
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="32dp"
        android:layout_below="@+id/btnCrear_cuenta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
</ScrollView>